{
  "private": true,
  "scripts": {
    "clean": "rimraf output && rimraf .spago",
    "build": "spago build --censor-stats --strict --pedantic-packages --ensure-ranges",
    "format": "purs-tidy format-in-place src/**/*.purs test/**/*.purs",
    "test": "spago test",
    "update-docs": "spago docs --format markdown",
    "example": "spago bundle --package example --strict --censor-stats --pedantic-packages --platform browser --output html/index.js"
  },
  "devDependencies": {
    "rimraf": "^6.0.1"
  }
}
